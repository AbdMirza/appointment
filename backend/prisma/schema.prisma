generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String         @id @default(uuid())
  email         String         @unique
  name          String?
  password      String
  role          Role
  businessId    String?
  business      Business?      @relation(fields: [businessId], references: [id])
  bookings      Booking[]      @relation("CustomerBookings")
  refreshTokens RefreshToken[]
  deletedAt     DateTime?      // Soft delete timestamp
  createdAt     DateTime       @default(now())

  // Staff relations
  acceptedBookings Booking[]      @relation("StaffAcceptance")
  notifications    Notification[]
}

model Business {
  id       String @id @default(uuid())
  name     String
  address  String
  contact  String
  timezone String

  users         User[]
  services      Service[]
  notifications Notification[]
  createdAt     DateTime       @default(now())
}

model Service {
  id               String    @id @default(uuid())
  name             String
  description      String?
  duration         Int
  price            Decimal   @default(0) @db.Decimal(10, 2)
  bufferTimeBefore Int       @default(0)
  bufferTimeAfter  Int       @default(0)
  isActive         Boolean   @default(true)
  businessId       String
  business         Business  @relation(fields: [businessId], references: [id])
  deletedAt        DateTime?
  createdAt        DateTime  @default(now())
  updatedAt        DateTime  @updatedAt
  bookings         Booking[]
}

model Booking {
  id           String   @id @default(uuid())
  startTime    DateTime
  endTime      DateTime
  status       String   @default("PENDING")
  userId       String
  serviceId    String
  acceptedById String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  service    Service @relation(fields: [serviceId], references: [id])
  user       User    @relation("CustomerBookings", fields: [userId], references: [id])
  acceptedBy User?   @relation("StaffAcceptance", fields: [acceptedById], references: [id])
}

model Notification {
  id         String   @id @default(uuid())
  title      String
  message    String
  type       String // e.g., "APPOINTMENT_ACCEPTED"
  isRead     Boolean  @default(false)
  userId     String? // Target user (if specific)
  businessId String? // Target business (for all staff)
  createdAt  DateTime @default(now())

  user     User?     @relation(fields: [userId], references: [id])
  business Business? @relation(fields: [businessId], references: [id])
}

enum Role {
  BUSINESS_ADMIN
  STAFF
  CUSTOMER
}

model RefreshToken {
  id        String   @id @default(uuid())
  token     String   @unique
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  expiresAt DateTime
  createdAt DateTime @default(now())
}

